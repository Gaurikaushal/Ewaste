<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           tools:ignore="MissingConstraints">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <Button
                   android:layout_width="252dp"
                   android:layout_height="64dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="30dp"
                   android:backgroundTint="@color/darkgreen"
                   android:text="Checkout"
                   android:textAlignment="center"
                   android:textColor="@color/white">


               </Button>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="35dp"
                   android:text="Enter user details"
                   android:textColor="@color/black"
                   android:textSize="23sp"
                   tools:ignore="TextSizeCheck">

               </TextView>


               <EditText
                   android:id="@+id/NameEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Name"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>


               <EditText
                   android:id="@+id/ContactEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Contact number"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="35dp"
                   android:text="Pickup schedule payment"
                   android:textColor="@color/black"
                   android:textSize="23sp"
                   tools:ignore="TextSizeCheck">

               </TextView>

               <EditText
                   android:id="@+id/DateEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Date"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">


               </EditText>

               <EditText
                   android:id="@+id/timeEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Time"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>

               <EditText
                   android:id="@+id/UpiEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Upi"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="40dp"
                   android:text="Contact details"
                   android:textColor="@color/black"
                   android:textSize="23sp"
                   tools:ignore="TextSizeCheck">

               </TextView>

               <EditText
                   android:id="@+id/AddressEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Address"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>

               <EditText
                   android:id="@+id/LandmarkEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="Landmark"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>

               <EditText
                   android:id="@+id/CityEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="City"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>

               <EditText
                   android:id="@+id/StateEdit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/edit_bg"
                   android:hint="State"
                   android:importantForAutofill="no"
                   android:minHeight="48dp"
                   android:paddingLeft="15dp"
                   android:textColorHint="@color/darkgreen"
                   tools:ignore="TextFields,VisualLintTextFieldSize">

               </EditText>

               <Button
                   android:layout_width="350dp"
                   android:layout_height="wrap_content"
                   android:text="@string/proceed"
                   android:id="@+id/btn_proceed"
                   android:layout_gravity="center"
                   android:layout_marginTop="30dp"
                   android:backgroundTint="@color/darkgreen"
                   android:textColor="@color/white" />


           </LinearLayout>

       </ScrollView>


   </RelativeLayout>

</FrameLayout>